<%- include('helpers/header', {title: "Artículo"}); %>

<body>
    <nav class="navbar navbar-expand-md navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">Law Maker&trade;</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
                aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            </div>
        </div>
    </nav>

    <main role="main" class="container">
        <h1 class="title mt-2 mb-4">Artículo (ADRI EL NÚMERO)
            <% for (let tag of article.tags) { %>
            <span class="badge badge-warning">#<%= tag %></span>
            <% } %>
        </h1>

        <% if (req.session.admin == true && article.status == "open") { %>
            <h2><a href="/article/close/<%= article.id %>" class="btn btn-danger btn-lg" role="button" >Finalizar votación</a></h2>
        <% } %>

        <% if (article.status == "proposed") { %>
        <div class="alert alert-primary" role="alert">
            Artículo propuesto.
        </div>
        <% } else if (article.status == "open") { %>
        <div class="alert alert-warning" role="alert">
            Artículo abierto.
        </div>
        <% } else if (article.status == "close") { %>
        <div class="alert alert-success" role="alert">
            Artículo cerrado.
        </div>
        <% } %>

        <% if (article.status == "proposed") { %>
        <div class="mb-4 stats">
            <span class="mr-1 badge badge-secondary">
                Número de respuestas <span class="badge badge-light">33</span>
            </span>
            <span class="mr-1 badge badge-success">
                Votos a favor <span class="badge badge-light">3</span>
            </span>
            <span class="mr-1 badge badge-danger">
                Votos en contra <span class="badge badge-light">73</span>
            </span>
        </div>
        <% } %>

        <div class="card bg-secondary text-white">
            <div class="card-header">
                <div class="h4">Motivación</div>
            </div>
            <div class="card-body">
                <p class="card-text"><%= article.motivation %></p>
            </div>
        </div>

        <% if (article.status == "open") { %>
        <div class="mt-3 card bg-light">
            <div class="card-header">
                <div class="h4">Texto</div>
                <div class="stats">
                    <span class="mr-1 badge badge-secondary">
                        Número de respuestas <span class="badge badge-light">33</span>
                    </span>
                    <span class="mr-1 badge badge-success">
                        Votos a favor <span class="badge badge-light">3</span>
                    </span>
                    <span class="mr-1 badge badge-danger">
                        Votos en contra <span class="badge badge-light">73</span>
                    </span>
                </div>
            </div>
            <div class="card-body">
                <p class="card-text"><%= article.text %></p>
            </div>
        </div>
        <% } %>

    </main>


    <%- include('helpers/footer'); %>