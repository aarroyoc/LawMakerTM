    <main role="main" class="container">
        <h1 class="title mt-2 mb-4">Nueva propuesta</h1>
        <form method="POST" action="/addProposal/<%= articleId %>">

            <h4 class="mb-3">Motivación</h4>
            <textarea class="form-control mb-4" readonly><%= motivation %></textarea>

            <% if(parent) { %>
            <textarea name="text" class="form-control mt-4"><%= text %></textarea>
            <input type="hidden" name="parent" value="<%= parent %>">
            <% } else { %>
            <textarea name="text" class="form-control" placeholder="Escriba aquí el texto del artículo."></textarea>
            <% } %>
            <button type="submit" class="mt-4 btn btn-primary" >Crear propuesta</button>
        </form>
    </main>
